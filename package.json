{
    "name": "react-wizy",
    "version": "1.0.0",
    "description": "A react multi-step, wizard component with advanced features to manage flows",
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/esm/index.d.ts",
    "engines": {
        "node": ">=12.0.0"
    },
    "scripts": {
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module commonjs --outDir lib/cjs",
        "example": "npm run build && cd example && npm start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oiche/react-wizy.git"
    },
    "keywords": [
        "react",
        "multistep",
        "wizard",
        "flow",
        "advanced",
        "jumps"
    ],
    "author": "@Oiche",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/oiche/react-wizy/issues"
    },
    "homepage": "https://github.com/oiche/react-wizy#readme",
    "devDependencies": {
        "@types/react": "^17.0.16",
        "@types/react-dom": "^17.0.9",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "typescript": "^4.3.5"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "files": [
        "/lib"
    ]
}